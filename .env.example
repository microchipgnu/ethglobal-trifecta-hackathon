# ================================================
# Domain configuration
# ================================================

DOMAIN=your_domain

# ================================================
# RTIMP Server Configuration
# ================================================

RTMP_PORT=1935

# ================================================
# Streaming Configuration
# ================================================

RTMP_URL=rtmp://rtmp-server:1935/live
TARGET_URL=http://your_domain:6080/vnc.html?autoconnect=true&view_only=true
RESOLUTION=1280x720
FPS=30
VIDEO_BITRATE=2500k
AUDIO_BITRATE=128k
DISPLAY=:99
TARGET_VNC_PORT=6080
TARGET_VNC_PATH=/vnc.html?autoconnect=true&view_only=true


# ================================================
# Internal App Configuration
# ================================================

INTERNAL_APP_PORT=5173
INTERNAL_APP_HOST=0.0.0.0

# ================================================
# Internal API Configuration
# ================================================

INTERNAL_API_PORT=3030
INTERNAL_API_HOST=0.0.0.0

# ================================================
# Agent Configuration
# ================================================

DISPLAY_NUM=1
AGENT_PORT=8000
AGENT_HOST=0.0.0.0
HEIGHT=768
WIDTH=1024

# ================================================
# Anthropic API Key
# ================================================
ANTHROPIC_API_KEY=your_api_key

# ================================================
# Crypto
# ================================================

PRIVATE_KEY=your_private_key
ADDRESS=your_address
CHAIN_ID=84532  # Base Sepolia (default)
RPC_URL=https://sepolia.base.org  # Optional: Custom RPC URL

# CDP Wallet Provider
# CDP_API_KEY_NAME=your_cdp_key_name
# CDP_API_KEY_PRIVATE=your_cdp_key_private
# NETWORK_ID=base-sepolia

# Gas configuration (optional)
# GAS_LIMIT_MULTIPLIER=1.2
# FEE_PER_GAS_MULTIPLIER=1.2


# ================================================
# Redis Configuration
# ================================================

REDIS_PORT=6379
REDIS_HOST=redis
REDIS_PASSWORD=your_redis_password
